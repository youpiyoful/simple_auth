# Example environment file for Simple Auth API
# This file is committed to help reviewers/testers run the app easily.
# In real scenarios, DO NOT commit .env; distribute secrets via secure channels.

# Application
APP_NAME="Simple Auth API"
APP_VERSION="1.0.0"
DEBUG=true
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security
BCRYPT_ROUNDS=12
ACTIVATION_CODE_EXPIRY_MINUTES=1

# Database
# When running with docker-compose, use the Docker service name 'db'.
# For local runs without Docker, you can switch DB_HOST to 'localhost' and adjust DATABASE_URL accordingly.
DB_USER=app
DB_PASS=secret
DB_NAME=appdb
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://app:secret@db:5432/appdb
# Local-only alternative (uncomment if running API directly on host without Docker):
# DB_HOST=localhost
# DATABASE_URL=postgresql://app:secret@localhost:5432/appdb

# Email Configuration
USE_MOCK_EMAIL=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
