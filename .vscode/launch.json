    "version": "0.2.0",
    "configurations": [
        {
            "name": "API user - Debug (Python)",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "env": {
                "APP_ENV": "local",
                "PORT": "8001",
                "AUTO_RELOAD": "false",
                "DB_HOST": "db",
                "DB_PORT": "5432",
                "DB_USER": "app",
                "DB_PASS": "secret",
                "DB_NAME": "appdb",
                "SMTP_HOST": "smtp",
                "SMTP_PORT": "1025",
            },
            "console": "internalConsole",
            "cwd": "${workspaceFolder}",
            "justMyCode": true
        }
    ]
}
